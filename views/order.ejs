    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        let lastSelect = "airtime";

        const alertIt = (icon, title) => {
            Swal.fire({
                toast: true,
                position: "top-end",
                title,
                icon,
                timer: 5000,
                timerProgressBar: true,
                showConfirmButton: false,
            });
        };

        const __plans = <%- JSON.stringify(plans) %>;
        const airtimeBtn = document.getElementById("airtimeBtn");
        const dataBtn = document.getElementById("dataBtn");
        const electricityBtn = document.getElementById("electricityBtn");
        const cablesBtn = document.getElementById("cablesBtn");
        const menuBtns = document.querySelectorAll(".toggle-container button");

        const amountField = document.getElementById("amountField");

        const dataField = document.getElementById("dataPlanField");

        const distributionCompany= document.getElementById("distributionCompanyField");
        const meterNumber = document.getElementById("meterNumber");
        const meterType = document.getElementById("meterTypeField");

        const cableProviders = document.getElementById("cableProviderField");
        const cablePlans = document.getElementById("cablePlanField");
        const cableSmartNumber = document.getElementById("cableSmartNumber");

        const submitBtn = document.getElementById("submitBtn");


        function switchTab(mode) {
            const amountInput = document.querySelector("#amountField input");

            Array.from(menuBtns).forEach((btn) => btn.classList.remove("active"));
            if (lastSelect === "airtime") {
                amountField.classList.add("hidden");
            } else if (lastSelect === "data") {
                dataField.classList.add("hidden");
            } else if (lastSelect === "cable"){
                cableProviders.classList.add("hidden");
                cablePlans.classList.add("hidden");
                cableSmartNumber.classList.add("hidden");
            } else if (lastSelect === "electricity"){
                amountField.classList.add("hidden");
                distributionCompany.classList.add("hidden");
                meterNumber.classList.add("hidden");
                meterType.classList.add("hidden");
            }

            if (mode === "airtime") {
                amountInput.placeholder = "Min â‚¦100";
                lastSelect = "airtime";
                window.__service = "airtime";
                airtimeBtn.classList.add("active");
                amountField.classList.remove("hidden");
                submitBtn.innerText = "Purchase Airtime";
            } else if (mode === "data") {
                lastSelect = "data";
                window.__service = "data";
                dataBtn.classList.add("active");
                dataField.classList.remove("hidden");
                submitBtn.innerText = "Purchase Data";
            } else if (mode === "electricity") {
                amountInput.placeholder = "Min â‚¦1000";
                window.__service = "electricity";
                lastSelect = "electricity";
                electricityBtn.classList.add("active");
                amountField.classList.remove("hidden");
                distributionCompany.classList.remove("hidden");
                meterNumber.classList.remove("hidden");
                meterType.classList.remove("hidden");
                submitBtn.innerText = "Purchase Electricity";
            } else if (mode === "cable") {
                window.__service = "cable";
                lastSelect = "cable";
                cablesBtn.classList.add("active");
                cableProviders.classList.remove("hidden");
                cablePlans.classList.remove("hidden");
                cableSmartNumber.classList.remove("hidden");
                submitBtn.innerText = "Purchase Cable Plan";
            }
        }

        function selectNetwork(el) {
            if (!window.__service) window.__service = "airtime";
            document
                .querySelectorAll(".network-item")
                .forEach((item) => item.classList.remove("selected"));
            el.classList.add("selected");
            const choosed = el.textContent.trim();
            window.__network = choosed;
            const planSelect = dataField.querySelector("select");
            planSelect.innerHTML =
                '<option id="default" value="" disabled selected>Select a data plan</option>';
            const networkPlans = __plans.find(
                (p) => p.name?.toLowerCase() === choosed.toLowerCase(),
            );
            if (networkPlans) {
                networkPlans.data.forEach((plan) => {
                    const option = document.createElement("option");
                    option.value = plan.id;
                    option.innerText = `${choosed} (${plan.size} - ${plan.duration}) - â‚¦${plan.price}`;
                    planSelect.appendChild(option);
                });
            }
        }

        // Initialize with first network selected
        selectNetwork(document.querySelector(".network-grid").firstElementChild);

        submitBtn.addEventListener("click", async (e) => {
            e.preventDefault();
            const phone = document.querySelector('input[type="tel"]').value.trim();
            const amountInput = document.querySelector("#amountField input");
            const dataSelect = document.querySelector(
                "#dataPlanField select",
            ).value;
            const pin = document
                .querySelectorAll('input[type="password"]')[1]
                .value.trim();
            const service = window.__service;
            const network = window.__network;

            if (!phone || !/^\d{10,11}$/.test(phone)) {
                alertIt("error", "Please enter a valid phone number.");
                return;
            }

            const payload = {
                phone,
                network,
                service,
            };

            if (service === "airtime") {
                if (
                    !amountInput.value ||
                    isNaN(amountInput.value) ||
                    Number(amountInput.value) < 100
                ) {
                    alertIt("error", "Please enter a valid amount (minimum â‚¦100).");
                    return;
                }
                payload.amount = amountInput.value;
            } else {
                if (!dataSelect) {
                    alertIt("error", "Please select a data plan.");
                    return;
                }
                payload.planId = dataSelect;
            }

            if (!pin || pin.length !== 4) {
                alertIt("error", "Please enter your 4-digit transaction pin.");
                return;
            }
            payload.pin = pin;

            const res = await fetch("/api/order", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(payload),
            });

            if (!res.ok) {
                alertIt("error", "ðŸ¥² Error while processing request!");
                return;
            }

            const data = await res.json();

            if (!data.success) {
                return alertIt("error", data.error);
            }

            alertIt(
                "success",
                `You have successfully purchased ${service} for ${phone} on ${network}.`,
            );
        });
    </script>
